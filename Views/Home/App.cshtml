@{
    ViewData["Title"] = "App";
}

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col col-lg-4 border-end border-2">
            <h1>
                Hundo: A Coding Project
            </h1>
            <h4 class="lead">
                Live life one loop at a time. A C# coding exercise using loops.
                Write a program that displays the numbers from 0 to 100. Display the even numbers in <b>BOLD</b>
            </h4>
            <h2 class="mt-5 border-bottom border-2">
                Instructions
            </h2>
            <p>
                Enter a starting and an ending value. Press the button and the values will appear.
            </p>
        </div>
        <div class="col col-lg-8">
            <div>
                <h5>
                    Enter values
                </h5>
                <form class="row gy-2 gx-3" asp-controller="Home" asp-action="App" method="post">
                    <div class="col">
                        <input id="start-value" aria-label="Start value" type="number" class="form-control" placeholder="Start value" value="0" />
                    </div>
                    <div class="col">
                        <input id="end-value" aria-label="End value" type="number" class="form-control" placeholder="End value" value="100" />
                    </div>
                    <div class="col-12 d-flex justify-content-end">
                        <button id="submit" type="button" class="btn btn-lg text-light action" onclick="">
                            Display the Hundo!
                        </button>
                    </div>
                </form>
                <h2 class="mt-5 border-bottom border-2">
                    Results
                </h2>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <tbody id="results">
                            <!-- Results go here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>