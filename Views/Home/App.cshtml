@model HundoMVC.Models.Hundo
@{
    ViewData["Title"] = "App";
}

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col col-lg-4 border-end border-2">
            <h3 class="fw-bold lh-1 mb-3">
                Hundo in MVC
            </h3>
            <h4 class="lead">
                Live life one loop at a time. A C# coding exercise using loops.
                Write a program that displays the numbers from 0 to 100. Display the even numbers in <b>BOLD</b>
            </h4>
            <h2 class="mt-3 mt-md-4 border-bottom border-2">
                Instructions
            </h2>
            <p>
                Enter a starting and an ending value. Press the button and the values will appear.
            </p>
        </div>
        <div class="col col-lg-8">
            <div>
                <h5>
                    Enter values
                </h5>
                <div class="row">
                    <form asp-controller="Home" asp-action="App" method="post">
                        <div class="col-12 form-group">
                            <label asp-for="StartValue">Start Value</label>
                            <input type="number" asp-for=StartValue value="@Model.StartValue"  class="form-control" placeholder="Enter a start value" />

                            <label asp-for="EndValue">End Value</label>
                            <input type="number" asp-for="EndValue" value="@Model.EndValue"  class="form-control" placeholder="Enter an end value" />
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="submit" class="btn btn-lg text-light action">
                                Display the Hundo!
                            </button>
                        </div>
                    </form>
                </div>
                <h2 class="mt-5 border-bottom border-2">
                    Results
                </h2>

                @if (Model.Results != null && Model.Results.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            @* Loop over results in chunks of 10 *@
                            @for (int i = 0; i < Model.Results.Count; i+= 10)
                            {
                                <tr>
                                    @for (int j = i; j < i + 10 && j < Model.Results.Count; j++)
                                    {
                                        <td class="@(Model.Classes[j])">@Model.Results[j]</td>
                                    }
                                </tr>
                            }
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>